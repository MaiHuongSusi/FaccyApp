<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mindorks.faccyapp">

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />
    <!--
        <supports-gl-texture android:name="GL_OES_compressed_ETC1_RGB8_texture" />
    <supports-gl-texture android:name="GL_OES_compressed_paletted_texture" />
    -->
    <uses-feature
        android:name="android.hardware.camera.ar"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.ar.core"
            android:value="required" />

        <activity android:name="com.mindorks.faccyapp.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.mindorks.faccyapp.MainMenuActivity"
            android:parentActivityName="com.mindorks.faccyapp.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.mindorks.faccyapp.DirectoryActivity"
            android:parentActivityName="com.mindorks.faccyapp.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.mindorks.faccyapp.CameraActivity"
            android:parentActivityName="com.mindorks.faccyapp.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.mindorks.faccyapp.ThreeModelActivity"
            android:parentActivityName="com.mindorks.faccyapp.MainActivity"
            android:screenOrientation="portrait" />
        <activity android:name="com.mindorks.faccyapp.ThreeModelElectionActivity"
            android:parentActivityName="com.mindorks.faccyapp.MainActivity"
            android:screenOrientation="portrait" />
        <activity android:name="com.mindorks.faccyapp.ThreeDObjectActivity"
            android:parentActivityName="com.mindorks.faccyapp.MainActivity"
            android:screenOrientation="portrait" />
        <activity android:name="com.mindorks.faccyapp.PlayVideoInArScene"
            android:screenOrientation="portrait" />
    </application>

</manifest>